# vim:ft=ratpoison:
escape C-f

# https://www.japh.se/2021/03/21/ratpoison-urxvt-and-borders.html

set barbordercolor    #121212
set barinpadding      1
set barpadding        2 0
set barsticky         1
set bgcolor           #121212
set bwcolor           #161616
set fgcolor           #af875f
set font              "Anonymous Pro:style=Regular:pixelsize=10:antialias=1:hinting=1:hintstyle=3"
set framefmt          frame %f (%Wx%H)
set framemsgwait      3
#set framemsgwait      -1
set fwcolor           #242424
set gap               0
set historysize       20
set ignoreresizehints 0
set maxsizegravity    c
set maxundos          20
set msgwait           3
set onlyborder        0
set padding           0 0 0 0
#set padding           1 1 1 0
set resizefmt         resize (%Wx%H)
set resizeunit        5
set rudeness          15
set startupmessage    0
set stickyfmt         %t
set topkmap           top
set transgravity      c
set vscreens          10
set warp              0
set winfmt            %n%s%t
set wingravity        nw
set winliststyle      row
set winname           title

bind s   split
bind C-s split
bind S   hsplit
bind C-S hsplit
#bind c   exec urxvt -name sid -fg white -bg black -sbg
bind C   exec urxvt -fg white -bg black -sbg +sb
bind c   exec urxvt -fg white -bg '#121212' -sbg +sb
bind x   exec xterm

unbind k
unbind n
bind a exec sdorfehs -c "echo `date`"
bind n exec mpc prev
bind p exec mpc next
bind o exec mpc toggle

# swap workspaces, but define it in top
# "win-n"
definekey top s-1 vselect 0
definekey top s-2 vselect 1
definekey top s-3 vselect 2
definekey top s-4 vselect 3
definekey top s-5 vselect 4
definekey top s-6 vselect 5
definekey top s-7 vselect 6
definekey top s-8 vselect 7
definekey top s-9 vselect 8
definekey top s-0 vselect 9
definekey top s-q vselect 10

definekey top s-Return exec mpd-show-coverart

#< binds: window management
bind H prevscreen
bind J exchangedown
bind K exchangeup
bind L nextscreen

bind h focusleft
bind j focusdown
bind k focusup
bind l focusright

bind C-K kill

bind G gmove

bind Tab exec sdorfehs -c "set barbordercolor black" -c "set bgcolor #d3ceb9" -c "set barborder 6" -c "set barpadding 24 14" -c "set border 6" -c "set fgcolor #444444" -c "set padding 40 40 40 40" -c "set onlyborder 1"
bind ISO_Left_Tab restart

hsplit
exec sh ~/dev/sdorfehs-config/sdorfehs-feedbar
